generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Decimal
  stock       Int
  category    String
  imageUrl    String
  discount    Int      @default(0)
  isFeatured  Boolean  @default(false)
  views       Int      @default(0) // üëà NUEVO CAMPO: Contador de visitas
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Config {
  id             String   @id @default(cuid())
  companyName    String   @default("Mi Tienda")
  logoUrl        String   @default("") 
  logoHeight     String   @default("80px")
  whatsappNumber String   @default("")
  instagramUrl   String   @default("")
  tiktokUrl      String   @default("")
  welcomeText    String   @default("Bienvenido a nuestra tienda")
  locationUrl    String   @default("")
  paymentMethods String   @default("Efectivo,Transferencia,Tarjeta") 
  
  // üëá AGREGA ESTAS DOS L√çNEAS:
  carouselHeightDesktop String   @default("600px")
  carouselHeightMobile  String   @default("250px")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model CarouselItem {
  id             String   @id @default(cuid())
  mediaUrl       String   @default("") // URL para PC
  mediaUrlMobile String   @default("") // üëà NUEVO: URL para Celular
  mediaType      String   @default("image")
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
