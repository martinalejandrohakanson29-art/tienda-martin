generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Product {
  id              String   @id @default(cuid())
  title           String
  description     String
  price           Decimal
  stock           Int
  category        String
  imageUrl        String
  discount        Int      @default(0)
  isFeatured      Boolean  @default(false)
  mercadolibreUrl String   @default("") // üëà NUEVO CAMPO: Link a MercadoLibre
  views           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Config {
  id                    String   @id @default(cuid())
  companyName           String   @default("Mi Tienda")
  logoUrl               String   @default("") 
  logoHeight            String   @default("80px")
  announcementText      String   @default("")
  whatsappNumber        String   @default("")
  instagramUrl          String   @default("")
  tiktokUrl             String   @default("")
  welcomeText           String   @default("Bienvenido a nuestra tienda")
  locationUrl           String   @default("")
  paymentMethods        String   @default("Efectivo,Transferencia,Tarjeta") 
  carouselHeightDesktop String   @default("600px")
  carouselHeightMobile  String   @default("250px")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model CarouselItem {
  id             String   @id @default(cuid())
  mediaUrl       String   @default("")
  mediaUrlMobile String   @default("")
  mediaType      String   @default("image")
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ShipmentAudit {
  id        String   @id @default(cuid())
  itemId    String   // El MLA (ej: MLA12345678)
  envioId   String   // El Nro de Env√≠o (ej: 5422872)
  status    String   // "APROBADO" o "RECHAZADO"
  reason    String?  // Motivo (opcional)
  auditor   String?  // Usuario que aprob√≥
  createdAt DateTime @default(now())
  
  // Hacemos que la combinaci√≥n MLA + Envio sea √∫nica (para no auditar 2 veces lo mismo en el mismo env√≠o)
  @@unique([itemId, envioId])
}
