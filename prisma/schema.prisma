generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Product {
  id              String   @id @default(cuid())
  title           String
  description     String
  order           Int      @default(0)
  price           Decimal
  stock           Int
  category        String
  imageUrl        String
  freeShipping    Boolean  @default(true)
  imageUrl2       String   @default("")
  imageUrl3       String   @default("")
  videoUrl        String   @default("")
  discount        Int      @default(0)
  isFeatured      Boolean  @default(false)
  showOnHome      Boolean  @default(false)
  mercadolibreUrl String   @default("")
  views           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Config {
  id                    String   @id @default(cuid())
  dolarCotizacion       Decimal  @default(1000) @db.Decimal(10, 2)
  factorFob             Decimal  @default(1.00) @db.Decimal(10, 2)
  recargoFinanciacion   Decimal  @default(0)    @db.Decimal(10, 2)
  companyName           String   @default("Mi Tienda")
  logoUrl               String   @default("")
  logoHeight            String   @default("80px")
  announcementText      String   @default("")
  whatsappNumber        String   @default("")
  instagramUrl          String   @default("")
  tiktokUrl             String   @default("")
  welcomeText           String   @default("Bienvenido a nuestra tienda")
  locationUrl           String   @default("")
  paymentMethods        String   @default("Efectivo,Transferencia,Tarjeta")
  carouselHeightDesktop String   @default("600px")
  carouselHeightMobile  String   @default("250px")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model CarouselItem {
  id             String   @id @default(cuid())
  mediaUrl       String   @default("")
  mediaUrlMobile String   @default("")
  mediaType      String   @default("image")
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// --- MODELOS DE AUDITORÍA Y ENVÍOS ---

model Shipment {
  id        String         @id @default(cuid())
  name      String         @unique
  createdAt DateTime       @default(now())
  items     ShipmentItem[]
}

model ShipmentItem {
  id         String   @id @default(cuid())
  shipmentId String
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  
  itemId     String
  title      String
  sku        String?
  quantity   Int
  agregados  String?
  imageUrl   String?
  variation  String?
  
  @@index([shipmentId])
}

model ShipmentAudit {
  id        String   @id @default(cuid())
  itemId    String   
  envioId   String   
  status    String
  reason    String?
  auditor   String?  
  createdAt DateTime @default(now())
  
  @@unique([itemId, envioId])
}

model CostosArticulos {
  id                  Int      @id @default(autoincrement())
  id_articulo         String   @unique
  descripcion         String?
  costo_usd           Decimal? @db.Decimal(10, 2)
  factor_fob          Decimal? @db.Decimal(10, 2) @default(1.00)
  es_dolar            Boolean? @default(true)
  costo_final_ars     Decimal? @db.Decimal(20, 2)
  fecha_actualizacion DateTime @default(now())

  @@map("costos_articulos")
}

// --- TABLAS MAESTRAS DE MERCADO LIBRE ---

model ProductosMaestros {
  id                   Int      @id @default(autoincrement())
  mla                  String   
  variation_id         String?
  nombre_variante      String?
  nombre_publicacion   String?
  link_publicacion     String?
  estado               String?
  ultima_actualizacion DateTime @default(now())

  @@unique([mla, variation_id], name: "unique_mla_variation")
  @@map("productos_maestros")
}

model ComposicionKits {
  id              Int      @id @default(autoincrement())
  mla             String
  variation_id    String?
  nombre_variante String?
  id_articulo     String
  nombre_articulo String?
  cantidad        Int      @default(1)
  fecha_registro  DateTime @default(now())

  @@unique([mla, nombre_variante, id_articulo], name: "unique_kit_component")
  @@map("composicion_kits")
}

// --- GESTIÓN DE IMPORTACIONES (MODULAR) ---

model SupplierProduct {
  id              String   @id @default(cuid())
  sku             String   @unique 
  name            String   
  // ELIMINAR ESTA LÍNEA:
  // supplier        String?  
  
  // Relaciones con datos dinámicos
  ventas          ImportVentas?
  stock           ImportStock?
  purchaseItems   PurchaseOrderItem[] 
  kitComponents   KitComponent[]      

  updatedAt       DateTime @updatedAt
}

model ImportVentas {
  id              String          @id @default(cuid())
  sku             String          @unique
  product         SupplierProduct @relation(fields: [sku], references: [sku], onDelete: Cascade)
  
  salesLast30     Int             @default(0) 
  salesVelocity   Decimal?        @db.Decimal(10, 2) 

  updatedAt       DateTime @updatedAt
}

model ImportStock {
  id              String          @id @default(cuid())
  sku             String          @unique
  product         SupplierProduct @relation(fields: [sku], references: [sku], onDelete: Cascade)
  
  stockExternal   Int             @default(0) 

  updatedAt       DateTime @updatedAt
}

model PurchaseOrder {
  id              String   @id @default(cuid()) 
  externalId      String?
  supplier        String   
  status          String   
  arrivalDate     DateTime?
  totalItems      Int      @default(0)
  
  items           PurchaseOrderItem[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PurchaseOrderItem {
  id                 String          @id @default(cuid())
  purchaseOrderId    String
  purchaseOrder      PurchaseOrder   @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  
  supplierProductSku String
  supplierProduct    SupplierProduct @relation(fields: [supplierProductSku], references: [sku])
  
  quantity           Int             
  confirmed          Boolean         @default(false) 
}

model KitComponent {
  id                 String          @id @default(cuid())
  mla                String          
  variation_id       String?
  variant            String?
  
  supplierProductSku String
  supplierProduct    SupplierProduct @relation(fields: [supplierProductSku], references: [sku])
  
  quantityPerKit     Int             @default(1) 
  
  @@index([mla])
  @@index([variation_id])
  @@index([supplierProductSku])
}

model ArticulosCompuestos {
  id              Int      @id @default(autoincrement())
  sku_padre       String   // El SKU del kit (ej: 485801)
  sku_hijo        String   // El SKU del componente (ej: 483329)
  cantidad        Int      @default(1)
  fecha_registro  DateTime @default(now())

  @@unique([sku_padre, sku_hijo], name: "unique_parent_child")
  @@map("articulos_compuestos")
}

model PlanningSession {
  id          String   @id @default(cuid())
  dateFrom    DateTime 
  dateTo      DateTime 
  createdAt   DateTime @default(now())
}

// --- GESTIÓN DE VENTAS INSTAGRAM (Versión Simplificada) ---

model InstagramSale {
  id                String   @id @default(cuid())
  id_comprobante    String   @unique // ID externo
  numero_comprobante String
  fecha             DateTime @default(now())
  total             Decimal  @db.Decimal(20, 10)
  cliente           String
  dni               String?  // Lo dejamos opcional
  metodo_pago       String?  // Movido aquí para no usar otra tabla
  envio             Decimal? @db.Decimal(20, 2) @default(0)

  // Relación directa con los artículos
  articulos         InstagramSaleItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("instagram_sales")
}

model InstagramSaleItem {
  id            String   @id @default(cuid())
  saleId        String
  sale          InstagramSale @relation(fields: [saleId], references: [id], onDelete: Cascade)
  
  detalle       String   
  cantidad      String   // Formato "2,00"

  @@map("instagram_sale_items")
}
