generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Product {
  id              String   @id @default(cuid())
  title           String
  description     String
  order           Int      @default(0)
  price           Decimal
  stock           Int
  category        String
  imageUrl        String
  freeShipping    Boolean  @default(false) // üëà AGREGAR ESTA L√çNEA
  imageUrl2       String   @default("")
  imageUrl3       String   @default("")
  videoUrl        String   @default("")
  
  discount        Int      @default(0)
  isFeatured      Boolean  @default(false)
  showOnHome      Boolean   @default(false) // üëà NUEVO: Para la lista de abajo (Chico)
  mercadolibreUrl String   @default("") 
  views           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Config {
  id                    String   @id @default(cuid())
  companyName           String   @default("Mi Tienda")
  logoUrl               String   @default("") 
  logoHeight            String   @default("80px")
  announcementText      String   @default("")
  whatsappNumber        String   @default("")
  instagramUrl          String   @default("")
  tiktokUrl             String   @default("")
  welcomeText           String   @default("Bienvenido a nuestra tienda")
  locationUrl           String   @default("")
  paymentMethods        String   @default("Efectivo,Transferencia,Tarjeta") 
  carouselHeightDesktop String   @default("600px")
  carouselHeightMobile  String   @default("250px")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model CarouselItem {
  id             String   @id @default(cuid())
  mediaUrl       String   @default("")
  mediaUrlMobile String   @default("")
  mediaType      String   @default("image")
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ShipmentAudit {
  id        String   @id @default(cuid())
  itemId    String   
  envioId   String   
  status    String   
  reason    String?
  auditor   String?  
  createdAt DateTime @default(now())
  
  @@unique([itemId, envioId])
}

// üëá NUEVOS MODELOS PARA EL HISTORIAL DE ENV√çOS
model Shipment {
  id        String         @id @default(cuid())
  name      String         @unique // Aqu√≠ guardaremos el nombre de la carpeta (Ej: "Envio_2023-12-20_1530")
  createdAt DateTime       @default(now())
  
  items     ShipmentItem[]
}

model ShipmentItem {
  id          String   @id @default(cuid())
  shipmentId  String
  shipment    Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  
  itemId      String   // El ID de MercadoLibre (MLA...)
  title       String
  sku         String?
  quantity    Int      // üëà EL DATO DE ORO: La cantidad planificada
  
  @@index([shipmentId])
}
