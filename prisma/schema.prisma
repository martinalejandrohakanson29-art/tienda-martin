generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Decimal
  stock       Int
  category    String
  imageUrl    String
  discount    Int      @default(0) // üëà AGREGA ESTA L√çNEA NUEVA
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Config {
  id             String   @id @default(cuid())
  companyName    String   @default("Mi Tienda")
  whatsappNumber String   @default("")
  instagramUrl   String   @default("")
  tiktokUrl      String   @default("")
  welcomeText    String   @default("Bienvenido a nuestra tienda")
  locationUrl    String   @default("")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model CarouselItem {
  id        String   @id @default(cuid())
  imageUrl  String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
