generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Product {
  id              String   @id @default(cuid())
  title           String
  description     String
  order           Int      @default(0)
  price           Decimal
  stock           Int
  category        String
  imageUrl        String
  freeShipping    Boolean  @default(true)
  imageUrl2       String   @default("")
  imageUrl3       String   @default("")
  videoUrl        String   @default("")
  discount        Int      @default(0)
  isFeatured      Boolean  @default(false)
  showOnHome      Boolean  @default(false)
  mercadolibreUrl String   @default("")
  views           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Config {
  id                    String   @id @default(cuid())
  companyName           String   @default("Mi Tienda")
  logoUrl               String   @default("")
  logoHeight            String   @default("80px")
  announcementText      String   @default("")
  whatsappNumber        String   @default("")
  instagramUrl          String   @default("")
  tiktokUrl             String   @default("")
  welcomeText           String   @default("Bienvenido a nuestra tienda")
  locationUrl           String   @default("")
  paymentMethods        String   @default("Efectivo,Transferencia,Tarjeta")
  carouselHeightDesktop String   @default("600px")
  carouselHeightMobile  String   @default("250px")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model CarouselItem {
  id             String   @id @default(cuid())
  mediaUrl       String   @default("")
  mediaUrlMobile String   @default("")
  mediaType      String   @default("image")
  order          Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// --- MODELOS DE AUDITORÍA Y ENVÍOS ---

model Shipment {
  id        String         @id @default(cuid())
  name      String         @unique // Nombre de la carpeta de Drive / Envio
  createdAt DateTime       @default(now())
  items     ShipmentItem[]
}

model ShipmentItem {
  id         String   @id @default(cuid())
  shipmentId String
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  
  itemId     String   // ID de Mercado Libre (MLA...)
  title      String
  sku        String?
  quantity   Int      // Cantidad planificada
  agregados  String?  // Columnas N, O, P, Q de la planilla
  imageUrl   String?  // <--- Nueva columna para la foto
  variation  String?  // <--- Nueva columna para la variante
  
  @@index([shipmentId])
}

model ShipmentAudit {
  id        String   @id @default(cuid())
  itemId    String   
  envioId   String   
  status    String   // APROBADO / RECHAZADO / PENDIENTE
  reason    String?
  auditor   String?  
  createdAt DateTime @default(now())
  
  @@unique([itemId, envioId])
}
model CostosArticulos {
  id                 Int      @id @default(autoincrement())
  id_articulo        String   @unique
  descripcion        String?
  costo_usd          Decimal? @db.Decimal(10, 2) // <-- Cambiamos el nombre
  factor_fob         Decimal? @db.Decimal(10, 2) @default(1.00) // <-- Nueva columna
  es_dolar           Boolean? @default(true)
  costo_final_ars    Decimal? @db.Decimal(20, 2)
  fecha_actualizacion DateTime @default(now())

  @@map("costos_articulos")
}

model ProductosMaestros {
  id                   Int      @id @default(autoincrement())
  mla                  String   @unique
  nombre_publicacion   String?
  link_publicacion     String?
  estado               String?
  ultima_actualizacion DateTime @default(now())

  @@map("productos_maestros")
}

model ComposicionKits {
  id              Int      @id @default(autoincrement())
  mla             String
  nombre_variante String?
  id_articulo     String
  nombre_articulo String?  // <--- Agregamos esta línea
  cantidad        Int      @default(1)
  fecha_registro  DateTime @default(now())

  @@unique([mla, nombre_variante, id_articulo], name: "unique_kit_component")
  @@map("composicion_kits")
}

// --- GESTIÓN DE IMPORTACIONES Y COMPRAS (ERP) ---

// 1. EL ARTÍCULO DEL PROVEEDOR (Ej: 483329 - Cigueñal Dakar)
model SupplierProduct {
  id              String   @id @default(cuid())
  sku             String   @unique // El código de Cover/Boggie (Ej: "483329")
  name            String   // Descripción (Ej: "Cigueñal dakar")
  supplier        String   // Ej: "Cover", "Boggie"
  
  // Datos Vivos (Scrapeados de Cover)
  stockExternal   Int      @default(0) // Columna "STOCK ACTUAL" (S)
  priceExternal   Decimal? @db.Decimal(10, 2) // Precio (P)
  
  // Métricas Calculadas (Vienen del Workflow de Ventas)
  salesLast30     Int      @default(0) // Ventas ML
  salesVelocity   Decimal? @db.Decimal(10, 2) // Promedio Consumo x Mes
  monthsCoverage  Decimal? @db.Decimal(10, 2) // Meses de stock calculados

  // Relaciones
  purchaseItems   PurchaseOrderItem[] // Lo que pediste en carritos
  kitComponents   KitComponent[]      // En qué Kits de ML se usa esto

  updatedAt       DateTime @updatedAt
}

// 2. PEDIDOS A PROVEEDORES (Los "Carritos" importados)
model PurchaseOrder {
  id              String   @id @default(cuid()) 
  externalId      String?  // El ID del carrito de Cover (Ej: "4983138")
  supplier        String   // "CHINA-BOGGIE", "CHINA-MATT"
  status          String   // "PENDIENTE", "EN_TRANSITO", "RECIBIDO"
  
  arrivalDate     DateTime? // Fecha estimada de arribo
  totalItems      Int       @default(0)
  
  items           PurchaseOrderItem[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// 3. DETALLE DEL PEDIDO (Qué hay dentro del carrito)
model PurchaseOrderItem {
  id                String          @id @default(cuid())
  purchaseOrderId   String
  purchaseOrder     PurchaseOrder   @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  
  supplierProductSku String
  supplierProduct    SupplierProduct @relation(fields: [supplierProductSku], references: [sku])
  
  quantity          Int             // Cantidad pedida
  confirmed         Boolean         @default(false) // Si ya llegó
}

// 4. MAPEO (Tu "Agrupar por agregado")
// Relaciona tus Kits de ML (MLA) con el Artículo del Proveedor
model KitComponent {
  id                 String          @id @default(cuid())
  
  mla                String          // El ID de la publicación en ML
  variant            String?         // Si es por talle (26mm, 28mm)
  
  supplierProductSku String
  supplierProduct    SupplierProduct @relation(fields: [supplierProductSku], references: [sku])
  
  quantityPerKit     Int             @default(1) // Cuántos lleva el kit
  
  @@index([mla])
  @@index([supplierProductSku])
}

// 5. CONFIGURACIÓN DE IMPORTACIÓN (Guardar fechas de análisis)
model PlanningSession {
  id          String   @id @default(cuid())
  dateFrom    DateTime // Fecha Inicio análisis
  dateTo      DateTime // Fecha Final análisis
  createdAt   DateTime @default(now())
}

